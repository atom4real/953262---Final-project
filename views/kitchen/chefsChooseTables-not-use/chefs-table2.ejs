<!-- use css same as index of customer --> 
<!-- use same function of orderMenu zB. each index.ejs and edit.ejs  -->
<%- include("../../partials/nav") -%> 
    
    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert"><%= messages.success %></div>
    <% } %>

    <div class="card">
        <div class="card-header">
            <div class="head-orderlist">
                <div class="row">
                    <div class="col">
                        <a href="/chefs" class="button-back">Back</a>
                    </div>
                    <div class="col">
                        TABLE: 2
                    </div>
                    <div class="col">
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <% let total = 0 %> 

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Images</th>
                            <th scope="col">Lists</th>
                            <th scope="col">Status</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            <th scope="col" width="200px">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < data.length; i++) { %>
                            <tr>
                                <th scope="row">
                                    <%= data[i].id %></th>
                                <td><img class="img-index" src="<%= data[i].img %>" alt=""></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].status %></td>
                                <td><%= data[i].quantity %></td>
                                <td><%= data[i].price %></td>
                                <td>
                                    <a href="../menu/edit/<%= data[i].id %>" class="btn btn-success edit">Edit</a>
                                </td>
                            </tr>
                            <% total += (data[i].price * data[i].quantity) %> 
                        <% } %>
                    </tbody>
                    <tfoot>
                        
                        <td class="price_txt" scope="col" colspan="4"></td>
                        <td class="price_txt" scope="col" colspan="1">Total Price</td>
                        <td class="price_txt"><%= total %> </td>
                        
                     </tfoot>
                </table>
            <% } %>

            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">Order is not found!</p>
            <% } %>
        </div>
    </div>

<%- include("../../partials/footer") -%> 