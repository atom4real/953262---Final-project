<%- include("../../partials/nav") -%> 
<body>
    <div class="login-register-bg"></div>
        <div class="login-register-bg-text">
        <h2 class="text-login-register-header">Register</h2>

        <form action="register" method="POST" novalidate>
            <div class="form-text">
                <label>Username</label>
                <div class="input-text">
                    <input type="text" name="username" class="form-control" placeholder="Name" required>
                </div>
            </div>
            <div class="form-text">
                <label>Email</label>
                <div class="input-text">
                    <input type="email" name="email" class="form-control" placeholder="Email" required>
                </div>
            </div>
            <div class="form-text">
                <label>Password</label>
                <div class="input-text">
                    <input type="password" name="password" class="form-control" placeholder="Password" required>
                </div>
            </div>
            <div class="form-text">
                <label>Confirm Password</label>
                <div class="input-text">
                    <input type="password" name="confirm_password" class="form-control" placeholder="Password" required>
                </div>
            </div>
            <% if (locals.register_error) { 
              register_error.forEach(function(error_msg){ %>
              <div class="alert alert-danger" role="alert"><%= error_msg %></div>
            <% });
            } %>
            <a href="/login">I already have an account</a><br/>
            <button type="submit" class="login-register-main-button login-register-button">Join now</button>
        </form>
    </div>
<%- include("../../partials/footer") -%> 