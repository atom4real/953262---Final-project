            <div class="row">
                <div class="col">

                </div>
                <div class="col">
                    CHECKOUT
                </div>
                <div class="col">

                </div>
            </div>
        </div>
    </div>
    <div class="scan2pay">
        <div class="img-bank">
            <img src="../../img/kbank.png">
        </div>
        <h3>765-1272-8172-5</h3>
